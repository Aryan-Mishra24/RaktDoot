<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".select_blood">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="खोजने के लिए ब्लड ग्रुप सेलेक्ट करे "
        android:textColor="@color/md_theme_light_scrim"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.77" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.405">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/a_p_button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/blood_button"
                android:gravity="center"
                android:text="A+"
                android:textColor="@color/md_theme_light_onSecondary"
                android:textSize="25sp" />

            <View
                android:id="@+id/divider1"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="@color/md_theme_light_onSecondary" />

            <Button
                android:id="@+id/a_m_button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/blood_button"
                android:gravity="center"
                android:text="A-"
                android:textColor="@color/md_theme_light_onSecondary"
                android:textSize="25sp" />

        </LinearLayout>

        <View
            android:id="@+id/divider8"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/md_theme_light_onSecondary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/b_p_button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/blood_button"
                android:gravity="center"
                android:text="B+"
                android:textColor="@color/md_theme_light_onSecondary"
                android:textSize="25sp" />

            <View
                android:id="@+id/divider3"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="@color/md_theme_light_onSecondary" />

            <Button
                android:id="@+id/b_m_button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/blood_button"
                android:gravity="center"
                android:text="B-"
                android:textColor="@color/md_theme_light_onSecondary"
                android:textSize="25sp" />

        </LinearLayout>

        <View
            android:id="@+id/divider0"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/md_theme_light_onSecondary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ab_p_button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/blood_button"
                android:gravity="center"
                android:text="AB+"
                android:textColor="@color/md_theme_light_onSecondary"
                android:textSize="20sp" />

            <View
                android:id="@+id/divider4"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="@color/md_theme_light_onSecondary" />

            <Button
                android:id="@+id/ab_m_button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/blood_button"
                android:gravity="center"
                android:text="AB-"
                android:textColor="@color/md_theme_light_onSecondary"
                android:textSize="20sp" />


        </LinearLayout>

        <View
            android:id="@+id/divider7"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/md_theme_light_onSecondary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/o_p_button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/blood_button"
                android:gravity="center"
                android:text="O+"
                android:textColor="@color/md_theme_light_onSecondary"
                android:textSize="25sp" />

            <View
                android:id="@+id/divider6"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="@color/md_theme_light_onSecondary" />

            <Button
                android:id="@+id/o_m_button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/blood_button"
                android:gravity="center"
                android:text="O-"
                android:textColor="@color/md_theme_light_onSecondary"
                android:textSize="25sp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/sign_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.693" />


</androidx.constraintlayout.widget.ConstraintLayout>